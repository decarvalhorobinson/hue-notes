{
  "name": "hue-notes",
  "version": "1.0.0",
  "description": "A note app for myself",
  "main": "main.js",
  "scripts": {
    "start": "electron --enable-transparent-visuals --disable-gpu .",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/icon.icns --prune=true --out=release-builds/mac",
    "package-win": "electron-packager . --disable-gpu hue-notes --overwrite --asar=true --platform=win32 --arch=all --icon=assets/icons/icon.ico --prune=true --out=release-builds/win --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName='Hue Notes App'",
    "package-linux": "electron-packager .  --enable-transparent-visuals --disable-gpu hue-notes --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/icon.png --prune=true --out=release-builds/linux"
  },
  "keywords": [
    "notes",
    "app",
    "windowslike"
  ],
  "author": "Robinson Carvalho",
  "license": "MIT",
  "devDependencies": {
    "electron": "^1.8.2",
    "electron-builder": "^20.0.4",
    "electron-packager": "^11.0.1"
  }
}
